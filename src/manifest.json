{
  "name": "Ruqqus Plus",
  "version": "0.0.1",
  "description": "Enhancements for ruqqus.com",
  "manifest_version": 2,
  "permissions": [
    "alarms",
    "storage"
  ],
  "options_page": "html/settings.html",
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://ruqqus.com/*"
      ],
      "css": [
        "css/contentStyles.css"
      ],
      "js": [
        "js/contentScript.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "js/contentInject.js",
    "images/loading.svg"
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
